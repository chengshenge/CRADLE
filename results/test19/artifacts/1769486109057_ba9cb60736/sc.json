    {
      "name": "interpret_clock_time",
      "signature": "(clock_image:str)->str",
      "purpose": "Interpret the time shown on a clock face image and express it in words.",
      "inputs": [
        "clock_image"
      ],
      "outputs": "Time in words",
      "edge_cases": [
        "Clock hands pointing exactly at the hour",
        "Clock hands between hour marks"
      ],
      "tests": [
        {
          "input": "clock_image_1",
          "expect": "quarter past"
        },
        {
          "input": "clock_image_2",
          "expect": "half"
        },
        {
          "input": "clock_image_3",
          "expect": "o'clock"
        }
      ],
      "tags": [
        "time interpretation",
        "clock reading",
        "diagram analysis"
      ]
    },
    {
      "name": "match_time_expression",
      "signature": "(time_in_words:str, options:list)->str",
      "purpose": "Match the interpreted time in words to one of the given multiple-choice options.",
      "inputs": [
        "time_in_words",
        "options"
      ],
      "outputs": "Option label",
      "edge_cases": [
        "Exact match not found",
        "Multiple close matches"
      ],
      "tests": [
